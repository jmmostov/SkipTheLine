<!DOCTYPE html>

<html lang="en">
<%- include('layouts/header.ejs');-%>

<body>
<%- include('layouts/navbar.ejs');-%>
<%- include('layouts/scripts');-%>


<h1>
    Admin can register a linestander and update/delete linestander
</h1>

<form action="/users/registerLinestander" method="POST" enctype="application/x-www-form-urlencoded">
    <div class="container">
        <div class="control-group">
            <div class="form-group floating-label-form-group controls">
                <label for="fullName"><b>Linestander full name</b></label><br>
                <input type="text" placeholder="Full name" id="fullName" name="fullName">
            </div>
        </div>
        <br>
        <div class="control-group">
            <div class="form-group floating-label-form-group controls">
                <label for="email"><b>Email</b></label><br>
                <input type="text" placeholder="Email" id="email" name="email">
            </div>
        </div>
        <br>
        <div class="control-group">
            <div class="form-group floating-label-form-group controls">
                <label for="phoneNumber"><b>Phone number</b></label><br>
                <input type="text" placeholder="Phone number" id="phoneNumber" name="phoneNumber">
            </div>
        </div>
        <br>
        <div class="control-group">
            <div class="form-group floating-label-form-group controls">
                <label for="username2"><b>Linestander name</b></label><br>
                <input type="text" placeholder="Username" id="username2" name="username2">
            </div>
        </div>
        <br>
        <div class="control-group">
            <div class="form-group floating-label-form-group control">
                <label for="password"><b>Linestander password</b></label><br>
                <input type="password" placeholder="Enter Password" id="password" name="password">
            </div>
        </div>
        <br>
        <button type="submit" class="registerbtn">Register</button>
        <hr>

    </div>
</form>

<section class="get">
    <h3> GET data for LineStander</h3>
    <div>
        <% for(var i = 0; i < users.length; i++) { %>
       <article class="data">
           <hr>
           <div> <b>Username:</b> <%= users[i].username %> </div>
           <br>
           <div> <b>Full name:</b> <%= users[i].full_Name %> </div>
           <br>
           <div> <b>Email:</b> <%= users[i].email %> </div>
           <br>
           <div> <b>phoneNumber:</b> <%= users[i].phone_number %> </div>
           <br>
           <div> <b>ID:</b>  <%= users[i]._id %></div>

       </article>
        <% } %>
    </div>
</section>

<section class="update">
    <h3>UPDATE data</h3>
    <form id="updateForm" name="updateForm" >
        <div class="input">
            <label for="id"> ID </label>
            <input type="text" id="id" name="id" placeholder="ID">
        </div>
        <br>
        <div class="input">
            <label for="username"> Username </label>
            <input type="text" id="updateLSUsername" placeholder="Username">
        </div>
        <br>
        <div class="input">
            <label for="fullName"> Full name </label>
            <input type="text" id="updateName" placeholder="Full Name">
        </div>
        <br>
        <div class="input">
            <label for="email"> Email </label>
            <input type="text" id="updateEmail" placeholder="Email">
        </div>
        <br>
        <div class="input">
            <label for="phoneNumber"> Phone Number </label>
            <input type="text" id="updateNumber" placeholder="Phone Number">
        </div>
        <br>
        <button type="submit" id="formButton" name="formButton" >Update</button>
    </form>
</section>

<section class="delete">
    <h3>DELETE</h3>
    <form id="deleteLineStander">
        <div class="control-group">
            <div class="form-group floating-label-form-group controls">
                <div class="input">
                    <label>ID</label>
                    <input type="text" placeholder="ID" id="deleteId" name="deleteId">
                </div>
            </div>
        </div>
        <button type="submit"> Delete LineStander</button>
    </form>
</section>

<script src="js/updateLineStander.js"></script>
<script src="js/deleteLineStander.js"></script>


</body>


</html>
