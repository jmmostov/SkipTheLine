<!DOCTYPE html>

<html lang="en">
<%- include('layouts/header.ejs');-%>

<body>
<%- include('layouts/navbar.ejs');-%>


<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <!-- Products is actually the lineItem.gennerateArray. -->
            <% for(var i = 0; i < products.length; i++) { %>
                <div class="post-preview">
                    <h1 class="post-title">

                        <%= products[i].product.productName + " " + products[i].product.price%>,-
                    </h1>
                    <h4 class="post-subtitle">
                        Quantity: <%= products[i].qty%>
                    </h4>
                    <h4 class="post-subtitle">
                        Price for these products: <%= products[i].price%>,-
                    </h4>
                    <div class="form-group">
                        <!-- We create a button, "Add to cart", which is a link to /lineItem/:id -->
                        <a href="/lineItem/reduce/<%= products[i].product._id%>" role="button">Delete one</a>
                    </div>
                    <div class="form-group">
                        <!-- We create a button, "Add to cart", which is a link to /lineItem/:id -->
                        <a href="/lineItem/delete/<%= products[i].product._id%>" role="button">Delete all</a>
                    </div>
                    <br>

                </div>
            <% } %>

            <br>

            <br>
                <div class="post-preview">
                    <h4 class="post-subtitle">
                        Delivery fee: <%= deliveryFee%>,-
                    </h4>
                </div>


            <div class="clearfix">
                <a class="btn btn-primary float-right" href="/order">Order</a>
                <h2 class="post-title" style="float: right; margin-right: 10px">
                    Total price: <%= totalPrice%>,-
                </h2>
            </div>
        </div>
    </div>
</div>

<%- include('layouts/scripts');-%>
</body>

</html>