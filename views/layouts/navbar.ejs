            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <!-- We remove these buttons for LineStander and admin by using their global validation variables -->
                <% if(!LSCheck && !admin) { %>
                <li class="nav-item">
                    <a class="nav-link" href="/products">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/lineItems">Shopping cart</a>
