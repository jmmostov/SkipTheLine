                <% } %>

                <!-- These buttons are only for the customers -->
                <% if(loggedIn) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/orderHistory/<%= loggedIn%>">Order history</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/accountSettings">Account Settings</a>
