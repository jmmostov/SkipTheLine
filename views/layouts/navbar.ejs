                by using their global validation variables -->
                <% if(!loggedIn && !LSCheck && !admin) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">New User</a>
